<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.ferit.kristinajavorek.unicon">

    <application
        android:allowBackup="true"
        android:icon="@drawable/converter"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConvertTimeAndShoes"
            android:theme="@style/PurpleTheme" />
        <activity
            android:name=".ConvertDistanceAndWeight"
            android:theme="@style/PurpleTheme" />
        <activity
            android:name=".ShowResult"
            android:theme="@style/PurpleTheme"></activity>
    </application>

</manifest>